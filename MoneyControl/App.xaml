<Application
    x:Class="MoneyControl.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MoneyControl"
    RequestedTheme="Light">
    <Application.Resources>
        <Style TargetType="Grid" x:Key="GridPane">
            <Setter Property="Background"  Value="#4D5C75"/>
        </Style>
        <Style TargetType="Border" x:Key="BorderPane">
            <Setter Property="Background"  Value="#4D5C75"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="tbPane">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Application.Resources>
</Application>
